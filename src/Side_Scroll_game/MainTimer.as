package {	import flash.display.MovieClip;	import flash.events.TimerEvent;	import flash.utils.Timer;	public class MainTimer extends MovieClip	{		private var currentMin:int;		private var currentSec:int;		private var oneSecTimer:Timer = new Timer(1000,1);		public var timerHasStopped:Boolean = false;		public function MainTimer( startingMin:int , startingSec:int )		{			// constructor code			trace( "Our timer is timing" );			currentMin = startingMin;			currentSec = startingSec;			minBox.text = String(currentMin);			secBox.text = String(currentSec);			if (currentSec < 10)			{				secBox.text = "0" + String(currentSec);			}			oneSecTimer.addEventListener(TimerEvent.TIMER_COMPLETE, onTimerComplete);			oneSecTimer.start();		}		//ends MainTimer();		private function onTimerComplete(event:TimerEvent):void		{						currentSec = currentSec - 1;			if (currentSec <= -1)			{				currentSec = 59;				currentMin -=  1;			}			if (currentMin <= -1)			{				currentMin = 0;				currentSec = 0;				timerHasStopped = true;				//resetTimer();			}			else			{				oneSecTimer.start();			}			minBox.text = String(currentMin);			secBox.text = String(currentSec);			if (currentSec < 10)			{				secBox.text = "0" + String(currentSec);			}		}//ends onTimerComplete		public function resetTimer( startingMin:int , startingSec:int  ):void		{			currentMin = startingMin;			currentSec = startingSec;			minBox.text = String(currentMin);			secBox.text = String(currentSec);			if (currentSec < 10)			{				secBox.text = "0" + String(currentSec);			}			timerHasStopped = false;			oneSecTimer.start();		}	}//ends public class }// ends package