import flash.display.MovieClip;import flash.events.TimerEvent;import flash.utils.Timer;var currentMin:int = 0;var currentSec:int = 5;var oneSecTimer:Timer = new Timer(1000,1);var timerHasStopped:Boolean = false;minBox.text = String(currentMin);secBox.text = String(currentSec);if (currentSec < 10){	secBox.text = "0" + String(currentSec);}oneSecTimer.addEventListener(TimerEvent.TIMER_COMPLETE, onTimerComplete);oneSecTimer.start();function onTimerComplete(event:TimerEvent):void{	minBox.text = String(currentMin);	secBox.text = String(currentSec);	if (currentSec < 10)	{		secBox.text = "0" + String(currentSec);	}	currentSec = currentSec - 1;	if (currentSec <= -1)	{		currentSec = 59;		currentMin -=  1;	}	if (currentMin <= -1)	{		timerHasStopped = true;		resetTimer();	}	else	{		oneSecTimer.start();	}}function resetTimer():void{	currentMin = 2;	currentSec = 0;	minBox.text = String(currentMin);	secBox.text = String(currentSec);		if (currentSec < 10)	{		secBox.text = "0" + String(currentSec);	}		timerHasStopped = false;	oneSecTimer.start();}