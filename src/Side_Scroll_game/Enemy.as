package {	import flash.events.Event;	public class Enemy extends BoundaryObject	{		private var enemyAboutToDie:Boolean;//判斷生死		private var xMovement:Number;		private var speedVar:int;		public var enemyIsAttacking:Boolean;//判斷是否正在攻擊		public function Enemy( passInSpeed:int )		{			enemyAboutToDie = false;			enemyIsAttacking = false;			speedVar = passInSpeed;			xMovement = speedVar;			// constructor code			addEventListener(Event.ENTER_FRAME, enterFrameHandler );		}		private function enterFrameHandler(event:Event ):void		{			this.x -=  xMovement;		}				//死亡funciton		public function makeEnemyDie()		{			this.gotoAndStop( "dead" );			enemyAboutToDie = true;			xMovement = 0;		}				//攻擊和停止攻擊funciton		public function makeEnemyAttack()		{			this.gotoAndStop( "attack" );			enemyIsAttacking = true;			xMovement = 0;		}		public function makeEnemyStopAttacking()		{			this.gotoAndStop( "stop" );			enemyIsAttacking = false;			xMovement = speedVar;		}		//animation desicion funciton		override public function positionOnLand()		{			if (enemyAboutToDie == true)			{				this.gotoAndStop("dead");			}			else if (enemyIsAttacking == true )			{				this.gotoAndStop("attack");			}			else			{				this.gotoAndStop("run");			}		}	}}