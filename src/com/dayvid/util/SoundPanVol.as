package com.dayvid.util{	import flash.media.SoundChannel;	import flash.media.SoundTransform;	//	public class SoundPanVol 	{		public function SoundPanVol():void 		{					}				public function adjustSound(channel:SoundChannel, vol:Number = 1, pan:Number = 0, x:Number = 0, panWidth:Number = 0, viewWidth:Number = 0):void 		{			var transformSFX:SoundTransform = channel.soundTransform;			if (vol <= 1) 			{				transformSFX.volume = vol;			} 			else 			{				transformSFX.volume = 1;			}						var thisPan:Number = pan;						if (panWidth > 0) 			{				// move the x position if the panWidth is more or less than viewWidth				var adjuster:Number = (viewWidth - panWidth) / 2;				x -= adjuster;												var panWidthHalf:Number = panWidth / 2;				thisPan = (x - panWidthHalf) / panWidthHalf;			}						thisPan = Math.max(thisPan, -1);			thisPan = Math.min(thisPan, 1);						transformSFX.pan = thisPan;						channel.soundTransform = transformSFX;						transformSFX = null;		}	}}