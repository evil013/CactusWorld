import flash.display.MovieClip;import flash.events.TimerEvent;import flash.utils.Timer;import flash.events.Event;import flash.ui.Keyboard;import flash.events.KeyboardEvent;var currentMin:int = 0;var currentSec:int = 5;var secBuffer:int;var oneSecTimer:Timer = new Timer(1000,1);var timerHasStopped:Boolean = false;minBox.text = String(currentMin);secBox.text = String(currentSec);hint.text = "CLICK ANYWHERE TO START!";stage.addEventListener(KeyboardEvent.KEY_DOWN, keyDownHandler);if (currentSec < 10){	secBox.text = "0" + String(currentSec);}function keyDownHandler(e:KeyboardEvent):void{	hint.text = "START!";	secBuffer = currentSec;	oneSecTimer.addEventListener(TimerEvent.TIMER_COMPLETE, onTimerComplete);	oneSecTimer.start();	}function onTimerComplete(event:TimerEvent):void{	minBox.text = String(currentMin);	secBox.text = String(currentSec);	if (currentSec < 10)	{		secBox.text = "0" + String(currentSec);	}		if (currentSec < secBuffer )	{		hint.text = "";	}		currentSec = currentSec - 1;	if (currentSec <= -1)	{		currentSec = 59;		currentMin -=  1;	}	if (currentMin <= -1)	{		timerHasStopped = true;		resetTimer();	}	else	{		oneSecTimer.start();	}}function resetTimer():void{	currentMin = 0;	currentSec = 15;	secBuffer = currentSec;	hint.text = "CLICK ANYWHERE TO START!";		minBox.text = String(currentMin);	secBox.text = String(currentSec);	if (currentSec < 10)	{		secBox.text = "0" + String(currentSec);	}	timerHasStopped = false;	oneSecTimer.start();}