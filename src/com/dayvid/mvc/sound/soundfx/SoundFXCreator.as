package com.dayvid.mvc.sound.soundfx{	import com.dayvid.mvc.model.model_components.ComponentModel;	import com.dayvid.mvc.sound.soundfx.sfx_components.SoundFX;		import flash.errors.IllegalOperationError;	import flash.media.Sound;

	// ABSTRACT CLASS (should be subclassed and not instantiated)	// Encapsulates SFX creation	public class SoundFXCreator	{		private var model:ComponentModel;		private var sfxVector:Vector.<SoundFX> = new Vector.<SoundFX>();				public function SoundFXCreator(aModel:ComponentModel) 		{			model = aModel;		}				public function createSFX(aType:uint):SoundFX 		{			var thisSfx:SoundFX = new SoundFX(model, createSound(aType), this);			sfxVector.push(thisSfx);			return thisSfx;		}				public function removeSFX(aSFX:SoundFX):void		{			sfxVector.splice(sfxVector.indexOf(aSFX), 1);		}				public function changeVolume(aNum:Number):void 		{			var sfxVectorLength:uint = sfxVector.length;			if (sfxVectorLength)			{				var i:uint = 0;				for (i; i < sfxVectorLength; i++) 				{					sfxVector[i].changeVolume(aNum);				}			}		}				public function stopAllSFX():void		{			var sfxVectorLength:uint = sfxVector.length;			if (sfxVectorLength)			{				var i:uint = 0;				for (i; i < sfxVectorLength; i++) 				{					sfxVector[i].stopSFX();				}			}		}				protected function createSound(aType:uint):Class 		{			throw new Error("Invalid kind of Sound FX specified");			return null;		}	}}